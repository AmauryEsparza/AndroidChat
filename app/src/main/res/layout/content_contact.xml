<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactIcon"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/contact_circle_image_width"
        android:layout_height="@dimen/contact_circle_image_height"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"/>
    
    <TextView
        android:id="@+id/txtContactName"
        android:text="Large Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/contactIcon"
        android:layout_toEndOf="@+id/contactIcon"/>

    <TextView
        android:id="@+id/txtContactStatus"
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@+id/txtContactName"
        android:layout_alignLeft="@+id/txtContactName"
        android:layout_alignStart="@+id/txtContactName"/>

</RelativeLayout>